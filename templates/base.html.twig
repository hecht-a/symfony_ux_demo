<!DOCTYPE html>
<html class="h-100">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>
<body class="h-100">
<div>
    <ul class="nav bg-white">
        <li class="nav-item">
            <a class="nav-link active" href="{{ path('alert') }}">Alert</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('random_number') }}">Random Number</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('posts') }}">Posts</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('chart') }}">Chart</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('chart_api') }}">Chart API</a>
        </li>
        <li class="nav-item">
            {% if app.user %}
                <a class="nav-link" href="{{ path('app_logout') }}">{{ app.user.email }}</a>
            {% else %}
                <a class="nav-link" href="{{ path('app_login') }}">Login</a>
            {% endif %}
        </li>
        <li class="nav-item">
    </ul>
</div>
<div class="container mt-4 h-auto d-flex justify-content-center">
    {% block body %}{% endblock %}
</div>
</body>
</html>
